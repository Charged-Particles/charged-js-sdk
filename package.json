{
  "name": "@charged-particles/charged-js-sdk",
  "description": "Charged Particles - Javascript SDK",
  "author": "Firma Lux, Inc.",
  "version": "0.1.0",
  "license": "ISC",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/charged-js-sdk.esm.js",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=14"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/charged-js-sdk.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/charged-js-sdk.esm.js",
      "limit": "10 KB"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build --entry src/index.ts",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "docs:api-using-documentation": "documentation build ./src/** -f md --shallow -o ./docs/api.md",
    "docs:api": "jsdoc2md -f ./src/** > docs/api.md",
    "docs:prepare": "gitbook install",
    "docs:build": "yarn run docs:api && gitbook build",
    "docs:serve": "yarn run docs:api && gitbook serve"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@types/lodash": "^4.14.182",
    "better-docs": "^2.7.2",
    "dotenv": "^16.0.1",
    "gitbook-cli": "^2.3.2",
    "jsdoc-to-markdown": "^7.1.1",
    "size-limit": "^7.0.8",
    "ganache-cli": "^6.12.2",
    "husky": "^8.0.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4",
    "web3-providers-http": "^1.7.3"
  },
  "dependencies": {
    "@charged-particles/protocol-subgraph": "^1.3.19",
    "ethers": "^5.6.6",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21"
  },
  "jest": {
    "testTimeout": 50000
  }
}
